<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

  <targets>
    <target name="MainLog" xsi:type="File" fileName="${basedir}/MainLog.txt" layout="${exception:format=ToString,StackTrace}${newline}"/>
  </targets>

  <rules>
    <logger name="*"  writeTo="MainLog" />
  </rules>
</nlog>
