<Window x:Class="WorkbookPublisher.View.RepublishDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bky="clr-namespace:BerkeleyEntities.Amazon"
        Title="Republish Data" Height="550" Width="700">
    <Window.Resources>  
        
    </Window.Resources>
    <StackPanel Orientation="Vertical">

        <TextBlock Margin="10" Text="{Binding Path=ProcessingResult.ResultDescription}"/>
        <ContentPresenter Content="{Binding Item}">
            <ContentPresenter.ContentTemplate>
                <DataTemplate DataType="bky:Product">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="101*"/>
                            <ColumnDefinition Width="417*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="42,10,37,10" HorizontalAlignment="Center" Width="22"> SKU</TextBlock>
                        <TextBox  Grid.Column="1" Margin="103,10,98,10" HorizontalAlignment="Center" Width="216" Text="{Binding SKU}"/>
                        <TextBlock Grid.Row="1" Margin="38,10,33,10" HorizontalAlignment="Center" Width="30" Text="Brand"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="103,10,98,10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=DescriptionData.Brand}"/>
                        <TextBlock Grid.Row="2" Margin="28,10,23,10" HorizontalAlignment="Center" Width="50" Text="Item Type"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="103,10,98,10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=DescriptionData.ItemType}"/>
                        <ContentPresenter Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="2"  Content="{Binding Path=ProductData.Item}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate DataType="bky:Shoes">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="101*"/>
                                            <ColumnDefinition Width="417*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Margin="22,10,15,10" HorizontalAlignment="Center" Width="64" Text="Department"/>
                                        <TextBox Grid.Column="1" Margin="103,10,98,10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=ClassificationData.Department}"/>
                                        <TextBlock Grid.Row="1" Margin="26,10,19,10" HorizontalAlignment="Center" Width="56" Text="Color Map"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Margin="103,10,98,10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=ClassificationData.ColorMap}"/>
                                        <TextBlock Grid.Row="2" Margin="38,10,33,10" HorizontalAlignment="Center" Width="30" Text="Color"/>
                                        <TextBox Grid.Row="2" Grid.Column="1" Margin="103,10,98,10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=VariationData.Color}"/>
                                        <TextBlock Grid.Row="3" Margin="42,10,37,10" HorizontalAlignment="Center" Width="22" Text="Size"/>
                                        <TextBox Grid.Row="3" Grid.Column="1" Margin="103,10,98,10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=VariationData.Size}"/>
                                    </Grid>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                    </Grid>
                </DataTemplate>              
            </ContentPresenter.ContentTemplate>          
        </ContentPresenter>
        <DockPanel Grid.Row="9" Grid.ColumnSpan="2" Grid.RowSpan="2" LastChildFill="False">
            <Button DockPanel.Dock="Left" Margin="10"  Width="75" Content="Previous" />
            <Button DockPanel.Dock="Left" Margin="10"  Width="75" Content="Done" />
            <Button DockPanel.Dock="Right"  Margin="10" Width="75" Content="Next" />
        </DockPanel>
    </StackPanel>
    
</Window>
