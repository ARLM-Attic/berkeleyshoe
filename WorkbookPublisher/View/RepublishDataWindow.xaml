<Window x:Class="WorkbookPublisher.View.RepublishDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bky="clr-namespace:BerkeleyEntities.Amazon"
        Title="Republish Data" ResizeMode="NoResize"  Width="500" Height="500" WindowStyle="None" >
    <Border BorderThickness="10" CornerRadius="5" BorderBrush="CadetBlue">
        <DockPanel>
        
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Name="btnPrevious" Grid.Column="0" Margin="10" Padding="10" Content="Previous" Click="btnPrevious_Click" />        
            <Button Name="btnNext" Grid.Column="1" Margin="30,10,10,10" Padding="20,10,20,10" Content="Next" Click="btnNext_Click" />
            <Button Name="btnDone" Grid.Column="4" Margin="10,10,10,10"  Padding="20,10,20,10" Background="AliceBlue" Content="Done" Click="btnDone_Click" />
            <TextBlock Grid.Column="3" Margin="10,10,10,10" Padding="10">
                <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} / {1}">
                            <Binding Path="CurrentPosition"/>
                            <Binding Path="Count"/>
                        </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            </Grid>
        <TextBlock DockPanel.Dock="Bottom" Margin="30" Text="{Binding Path=ProcessingResult.ResultDescription}"/>
        <ContentPresenter Margin="10" Content="{Binding Item}">
            <ContentPresenter.ContentTemplate>
                <DataTemplate DataType="bky:Product">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="10" HorizontalAlignment="Center" > SKU</TextBlock>
                        <TextBox  Grid.Column="1" Margin="10" HorizontalAlignment="Center" IsReadOnly="True" Width="216" Text="{Binding SKU}"/>
                        <TextBlock Grid.Row="1" Margin="10" HorizontalAlignment="Center" Width="30" Text="Brand"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=DescriptionData.Brand}"/>
                        <TextBlock Grid.Row="2" Margin="10" HorizontalAlignment="Center"  Text="Item Type"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=DescriptionData.ItemType}"/>
                        <ContentPresenter Grid.Row="3" Grid.RowSpan="4" Grid.ColumnSpan="2"  Content="{Binding Path=ProductData.Item}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate DataType="bky:Shoes">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Margin="10" HorizontalAlignment="Center" Width="64" Text="Department"/>
                                        <TextBox Grid.Column="1" Margin="10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=ClassificationData.Department}"/>
                                        <TextBlock Grid.Row="1" Margin="10" HorizontalAlignment="Center" Width="56" Text="Color Map"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Margin="10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=ClassificationData.ColorMap}"/>
                                        <TextBlock Grid.Row="2" Margin="10" HorizontalAlignment="Center" Width="30" Text="Color"/>
                                        <TextBox Grid.Row="2" Grid.Column="1" Margin="10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=VariationData.Color}"/>
                                        <TextBlock Grid.Row="3" Margin="10" HorizontalAlignment="Center" Width="22" Text="Size"/>
                                        <TextBox Grid.Row="3" Grid.Column="1" Margin="10" HorizontalAlignment="Center" Width="216" Text="{Binding Path=VariationData.Size}"/>
                                    </Grid>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                    </Grid>
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
    </DockPanel>
    </Border>

</Window>
